<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".addCalendar">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#272626"
            android:drawableLeft="@drawable/ic_launcher_foreground"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingLeft="30dip"
            android:paddingTop="0dip"
            android:paddingEnd="30dip"
            android:paddingRight="30dip"
            android:paddingBottom="0dip"
            android:text="Dodaj do kalendarza"
            android:textColor="#FDF8F8"
            android:textSize="20sp"
            android:visibility="visible" />

    </LinearLayout>

    <EditText
        android:id="@+id/dataEditText"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:text="Data"
        android:textColor="#FDF8F8"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.39" />

    <Spinner
        android:id="@+id/calendarSpinner"
        style="@android:style/Widget.Material.Light.Spinner"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:background="#323131"
        android:gravity="center"
        android:text="Button"
        android:textColor="#FDF8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/dataEditText"
        app:layout_constraintVertical_bias="0.120000005" />

    <Button
        android:id="@+id/addTrainCalendarButton"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:text="Dodaj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>