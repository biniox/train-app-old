<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DodajCwiczenie">


    <Button
        android:id="@+id/dodajButton"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:width="130dip"
        android:height="100dip"
        android:maxWidth="200dip"
        android:minWidth="20dip"
        android:text="Dodaj"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003" />

    <EditText
        android:id="@+id/nazwaCwiczeniaEditText"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="382dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="Nazwa ćwiczenia"
        android:inputType="textLongMessage"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#272626"
        android:drawableLeft="@drawable/ic_launcher_foreground"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingTop="0dip"
        android:paddingEnd="30dip"
        android:paddingRight="30dip"
        android:paddingBottom="0dip"
        android:text="Nowe ćwiczenie"
        android:textColor="#FDF8F8"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

